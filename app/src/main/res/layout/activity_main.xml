<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vehicleRecycler"
        android:layout_width="411dp"
        android:layout_height="436dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642" />

    <Button
        android:id="@+id/goToAddVehicleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:text="@string/add_a_new_vehicle"
        app:backgroundTint="#2C853B"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#FFFFFF" />

    <TextView
        android:id="@+id/noDataTv"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="156dp"
        android:alpha="0.2"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/no_data"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/vehicleRecycler"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vehicleRecycler" />

    <ImageView
        android:id="@+id/noData_imageView"
        android:layout_width="100dp"
        android:layout_height="82dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="156dp"
        android:alpha="0.2"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vehicleRecycler"
        app:srcCompat="?attr/actionModePasteDrawable"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/FuelAppTitle"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/archivo_black"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/fuelapp"
        android:textColor="#2C853B"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="12dp"
        android:text="@string/history_of_your_vehicle_in_one_place"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/FuelAppTitle"
        app:layout_constraintStart_toStartOf="@+id/FuelAppTitle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/your_vehicles"
        app:layout_constraintBottom_toTopOf="@+id/vehicleRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>