<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C853B">

    <Button
        android:id="@+id/deleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="15dp"
        android:text="Delete"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#2C853B" />

    <View
        android:id="@+id/view"
        android:layout_width="411dp"
        android:layout_height="600dp"
        android:background="@drawable/round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/myVehicleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="76dp"
        android:gravity="center"
        android:hint="myVehicleID"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/myVehicleBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:gravity="start"
        android:hint="myVehicleBrand"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myVehicleModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="start"
        android:hint="myVehicleModel"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myVehicleBrand" />

    <TextView
        android:id="@+id/myVehicleYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="right"
        android:hint="myVehicleYear"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/myEngineCapacity"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/goToServiceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:text="Repairs list"
        app:backgroundTint="#2C853B"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/myVehicleYear"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/goToFuelList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="48dp"
        android:text="Refuellings list"
        app:backgroundTint="#2C853B"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/vehicleYear"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/engineCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Engine capacity [L]:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/enginePower"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/enginePower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Engine power [HP]:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/inspectionDate"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/inspectionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Inspection due date:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/insuranceDate"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/insuranceDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="278dp"
        android:text="Insurance due date:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/vehicleYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Manufacture year:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/engineCapacity"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/myEngineCapacity"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="right"
        android:hint="2.0"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/myEnginePower"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/myEnginePower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="right"
        android:hint="256"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/myInspectionDate"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/myInspectionDate"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:gravity="right"
        android:hint="23-01-2019"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/myInsuranceDate"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/myInsuranceDate"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="278dp"
        android:gravity="right"
        android:hint="22-01-2020"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>