<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ServiceDetailsActivity">

    <View
        android:id="@+id/horizontalDivider2"
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#2C853B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thisServiceTitleTv" />

    <Button
        android:id="@+id/editService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="16dp"
        android:drawableRight="@drawable/ic_edit"
        android:gravity="center"
        android:text="Edit"
        android:textColor="@color/white"
        app:backgroundTint="@color/redish"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thisServiceTitleTv"
        app:rippleColor="#FFFFFF" />

    <TextView
        android:id="@+id/thisServiceTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:hint="This is a title that is not longer that  45 c"
        android:maxLength="45"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thisServiceDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:hint="12.12.1040"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/thisServDateTv"
        app:layout_constraintTop_toBottomOf="@+id/thisServiceCostTv" />

    <TextView
        android:id="@+id/thisServiceDescTv"
        android:layout_width="371dp"
        android:layout_height="450dp"
        android:layout_marginBottom="100dp"
        android:background="#73E4E4E4"
        android:hint="description here.."
        android:maxLength="100"
        android:maxLines="20"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/thisServiceCostTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="42dp"
        android:gravity="start"
        android:hint="13.37 PLN"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/thisServCostTv"
        app:layout_constraintTop_toBottomOf="@+id/thisServiceTitleTv" />

    <TextView
        android:id="@+id/thisServCostTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:text="Cost:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thisServiceTitleTv" />

    <TextView
        android:id="@+id/thisServDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Date:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thisServCostTv" />

    <ImageView
        android:id="@+id/imageService2"
        android:layout_width="150dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/service_daro"
        app:tint="#26151515"
        app:tintMode="src_in" />

</androidx.constraintlayout.widget.ConstraintLayout>