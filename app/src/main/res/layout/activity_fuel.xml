<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FuelActivity">

    <ImageView
        android:id="@+id/imageFuel"
        android:layout_width="150dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fuel_daro"
        app:tint="#26151515"
        app:tintMode="src_in" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fuelRecycler"
        android:layout_width="0dp"
        android:layout_height="550dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/typeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Type"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/horizontalDivider3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizontalDivider3"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginStart="72dp"
        android:background="#2C853B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AmountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:gravity="center"
        android:text="Amount"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/verticalDivider2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/horizontalDivider3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/verticalDivider2"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginStart="148dp"
        android:background="#2C853B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="Cost"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/verticalDivider3"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toEndOf="@+id/verticalDivider2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/verticalDivider3"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginStart="244dp"
        android:background="#2C853B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mileageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="Mileage"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/verticalDivider4"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toEndOf="@+id/verticalDivider3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/verticalDivider4"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginStart="324dp"
        android:background="#2C853B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Date"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/verticalDivider4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/verticalDivider5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2C853B"
        app:layout_constraintBottom_toTopOf="@+id/serviceRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/verticalDivider12"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2C853B"
        app:layout_constraintBottom_toTopOf="@+id/fuelRecycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goToAddFuelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="48dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add" />

    <ImageView
        android:id="@+id/emptyView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#E9000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/emptyFuel"
        android:layout_width="wrap_content"
        android:layout_height="505dp"
        app:layout_constraintBottom_toBottomOf="@+id/emptyView"
        app:layout_constraintEnd_toEndOf="@+id/emptyView"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/add_fuel" />

</androidx.constraintlayout.widget.ConstraintLayout>